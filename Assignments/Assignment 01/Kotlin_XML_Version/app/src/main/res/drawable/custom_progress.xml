<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Track -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC"/> <!-- Background color (Gray) -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Progress Fill -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#1e90ff"/> <!-- Progress bar color -->
                <corners android:radius="4dp"/> <!-- Rounded corners -->
            </shape>
        </clip>
    </item>
</layer-list>